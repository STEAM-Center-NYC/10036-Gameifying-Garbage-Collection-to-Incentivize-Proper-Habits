<div class="points-counter" id="pointsCounter">
    Points: <span id="points">1000</span>
    <div class="redeem-message">These points can be redeemed!</div>
  </div>

  <script>
    // JavaScript to update points in a loop (adjust as needed)
    let pointsElement = document.getElementById('points');
    let pointsCounter = document.getElementById('pointsCounter');
    let points = 1000;

    setInterval(() => {
      let change = Math.floor(Math.random() * 11) - 5; // Random increment/decrement between -5 and 5
      points += change;

      // Apply different effects for increase and decrease
      if (change > 0) {
        pointsCounter.classList.add('points-increase');
        setTimeout(() => {
          pointsCounter.classList.remove('points-increase');
        }, 500);
      } else if (change < 0) {
        pointsCounter.classList.add('points-decrease');
        setTimeout(() => {
          pointsCounter.classList.remove('points-decrease');
        }, 500);
      }

      pointsElement.textContent = points;
    }, 2000); // Update every 2 seconds, adjust as needed
  </script>


