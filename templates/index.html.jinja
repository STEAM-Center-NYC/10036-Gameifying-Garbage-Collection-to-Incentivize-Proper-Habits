<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://kit.fontawesome.com/d106e5acd2.js" crossorigin="anonymous"></script>
  <title>BinBuddy - Home</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Viga&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/main.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css"
    integrity="sha384-jLKHWM3JRmfMU0A5x5AkjWkw/EYfGUAGagvnfryNV3F9VqM98XiIH7VBGVoxVSc7" crossorigin="anonymous">
  <!-- Add this inside the <head> tag -->
  <style>
    .points-counter {
      position: fixed;
      top: 50%;
      right: 20px;
      font-size: 38px;
      font-weight: bold;
      color: #2d2c62;
      /* Dark blue color */
      transform: translateY(-50%);
      z-index: 999;
      /* Ensure it appears above other elements */
      transition: color 0.5s ease-in-out;
    }

    .points-increase {
      color: #00ff00;
      /* Green color for increase */
    }

    .points-decrease {
      color: #ff0000;
      /* Red color for decrease */
    }

    .redeem-message {
      font-size: 14px;
      margin-top: 5px;
    }
  </style>

</head>
<!-- Add this just before </body> -->


<body>

  <header>
    <div class="logo-container">
      <img src="static/images/binbuddytransparent.png" alt="BinBuddy Logo">
    </div>
    <nav>
      <ul class="navbar">
        <li><a href="#">Home</a></li>
        <li><a href="/rewards">Rewards</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Contact</a></li>
        {# {% if admin_access %}
            <li><a href="/admin">Admin Panel</a></li>
        {% endif %} #}
      </ul>
      <div class="user-section">
        <a href="/signin">Log in</a>
        <a href="/sign-up" class="nav-btn">Get Started</a>
      </div>
    </nav>
  </header>

  <section class="main-section">
    <div class="container">
      <div class="content">
        <h1>Embark on an Eco-Friendly Journey with <br> <span class="green">BinBuddy </span></h1>
        <p>Turn recycling into a rewarding adventure, earn points, and contribute to a cleaner environment. Join us in
          making the world a greener place!</p>
        <a href="#" class="cta-btn">Play Now</a>
      </div>
    </div>
  </section>
  <div class="points-counter" id="pointsCounter">
    Points: <span id="points">1000</span>
    <div class="redeem-message">These points can be redeemed!</div>
  </div>

  <script>
    // JavaScript to update points in a loop (adjust as needed)
    let pointsElement = document.getElementById('points');
    let pointsCounter = document.getElementById('pointsCounter');
    let points = 1000;

    setInterval(() => {
      let change = Math.floor(Math.random() * 11) - 5; // Random increment/decrement between -5 and 5
      points += change;

      // Apply different effects for increase and decrease
      if (change > 0) {
        pointsCounter.classList.add('points-increase');
        setTimeout(() => {
          pointsCounter.classList.remove('points-increase');
        }, 500);
      } else if (change < 0) {
        pointsCounter.classList.add('points-decrease');
        setTimeout(() => {
          pointsCounter.classList.remove('points-decrease');
        }, 500);
      }

      pointsElement.textContent = points;
    }, 2000); // Update every 2 seconds, adjust as needed 
     window.addEventListener('load', () => {
    document.body.classList.add('loaded');
  });
  </script>


</body>


</html>